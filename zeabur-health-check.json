{
  "healthChecks": {
    "backend": {
      "path": "/api/health",
      "port": 8080,
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 60
    },
    "frontend": {
      "path": "/health",
      "port": 80,
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 30
    },
    "mysql": {
      "type": "tcp",
      "port": 3306,
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 30
    },
    "redis": {
      "type": "tcp",
      "port": 6379,
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 30
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "endpoints": [
        "/api/actuator/metrics",
        "/api/actuator/health"
      ]
    },
    "logging": {
      "level": "INFO",
      "format": "json"
    }
  },
  "scaling": {
    "backend": {
      "minReplicas": 1,
      "maxReplicas": 3,
      "targetCPU": 70,
      "targetMemory": 80
    },
    "frontend": {
      "minReplicas": 1,
      "maxReplicas": 2,
      "targetCPU": 70,
      "targetMemory": 80
    }
  }
}
